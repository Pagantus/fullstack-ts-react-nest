{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@shared/": ["../shared/"]
    }
  },
  "files": [
    "./types.d.ts",
    "./client/client.tsx"
  ]
}
